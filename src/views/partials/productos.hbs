<div class="container mx-auto mt-5">
  <div class="py-8 m-5">
    <div class="d-flex justify-content-between m-5">
      <h2 class="font-semibold leading-tight">Productos</h2>
      <a href="/api/carrito" class="btn btn-primary btn-md mx-4 w-25">Carrito</a>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody>
        {{#if datos}}
          {{#each datos}}
          <tr>
            <td>{{name}}</td>
            <td>${{price}}.-</td>
            <td>{{description}}</td>
            <td><img src={{url}} alt={{name}} height="100" width="100"></td>
          </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="4" class="text-center p-20">
              <p class="mb-8">No hay productos para mostrar</p>
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>